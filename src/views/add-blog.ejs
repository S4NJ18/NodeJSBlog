<!-- views/add-blog.ejs -->

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
      <script src="https://cdn.ckeditor.com/4.22.1/standard/ckeditor.js"></script>
</head>
<body>
    <h2>Add Blog Post</h2>
<form action="/admin/posts/create" method="POST" enctype="multipart/form-data">
  <label>Title:</label>
  <input type="text" name="title" required><br><br>

  <label>Body:</label>
  <textarea id="editor" name="content" required></textarea><br><br>

  <label>Upload Image:</label>
  <input type="file" name="image" ><br><br>

  <label>Meta Description:</label>
  <input type="text" name="metaDescription"><br><br>

  <label>Meta Keywords (comma-separated):</label>
  <input type="text" name="metaKeywords"><br><br>

  <button type="submit">Publish</button>
</form>

<script>
    CKEDITOR.replace('editor');
  </script>
</body>
</html>



